<% include partials/header %>


                <div class="container" style="color:brown">
                    <form action="/register" method="POST" class="form-horizontal">
                            <h3 style="padding:20px"><strong>Signup as a User/Seller</strong></h3>
                            <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label"><h5>User name</h5> </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="username" placeholder="username">
                            </div>
                            </div>

                            <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label"> <h5>Mobile No.</h5></label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="mobilenbr" placeholder="Mobile Number">
                                    </div>
                                    </div>
                            

                            <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label"><h5>  Email</h5></label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="email" placeholder="example.123@gmail.com">
                            </div>
                            </div>

                            <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label"><h5>Select Genger </h5> </label>
                                     <div class="col-sm-10">
                                            
                                            <input type="radio" name="gender" value="Male"><strong> Male</strong> 
                                            <input type="radio" name="gender" value="Female">  <strong>Female</strong>
                                     </div>
                                      </div>

                              <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-10 control-label"><h5>Select User/Seller </h5>  (If you have a <strong>Shop</strong>  then select <strong>Seller</strong> option otherwise select <strong> User</strong> option)</label>
                                     <div class="col-sm-10">
                                            
                                            <input type="radio" name="isSeller" value="user"> <strong>User </strong>
                                            <input type="radio" name="isSeller" value="seller"> <strong>Seller </strong>
                                     </div>
                                      </div>
                                      <div class="form-group">
                                            <label for="inputEmail3" class="col-sm-10 control-label"> <h5>Seller Name </h5> (If you are select <strong>User</strong> option then not need to fill this box)</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" name="sellername" placeholder="Seller Name">
                                            </div>
                                            </div>

                                            <div class="form-group">
                                                    <label for="inputEmail3" class="col-sm-10 control-label"> <h5> Shop Name</h5> (If you are select <strong>User</strong> option then not need to fill this box) </label>
                                                    <div class="col-sm-10">
                                                        <input type="text" class="form-control" name="shopname" placeholder="Shop Name">
                                                    </div>
                                                    </div>

                                                    <div class="form-group">
                                                            <label for="inputEmail3" class="col-sm-10 control-label"> <h5> Shop Address</h5> (If you are select <strong>User</strong> option then not need to fill this box) </label>
                                                            <div class="col-sm-10">
                                                                <input type="text" class="form-control" name="shopaddress" placeholder="Shop Address">
                                                            </div>
                                                            </div>

                                

                            <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label"> <h5>Password</h5></label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" name="password" placeholder="Password">
                            </div>
                            </div>
                           
                            <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">Submit</button>
                                <a href="/home" class="btn btn-primary" >Go Back</a>
                            
                            </div>
                            </div>

                            <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
            
                                        <a href="/login"> <button type="button" class="btn btn-default btn-lg btn-block"><strong>Go to Login Page</strong> </button></a>
                                    </div>
                                    </div>    
                               
                         
                        </form> 
                </div>        
                        
                <% include partials/footer %>  



		