<% include partials/header %>

        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" >
    

<div class="container" style="padding:12px"> 
        <header class="jumbotron">

                <h4 style="color:brown"> <strong>DREAM</strong>STORE,Not just a Store </h4>
            
                <% if(currentUser && currentUser.isSeller){%>
                    <div class="container">
                            
                        <a href="/home/new"> <button class="btn bnt-default btn-lg" style="color: brown"><strong>Add Product</strong></button></a>
                        <a href="/home/currentseller/profile"> <button class="btn bnt-default btn-lg" style="color: brown; float:right; "><strong>Seller Details</strong></button></a>
                        
                    </div>    
                <%} %>
            
        </header>


        <div class="row text-center" style="display:flex;flex-wrap:wrap;">

                <div class="col-md-12">
                        <% if(noMatch !== null) { %>
                        <h3  style="color:brown" ><%= noMatch %></h3>
                        <% } %>
                </div>       
                <% carts.forEach(function(cart){%>
                  <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                                <img src="<%= cart.image %>">
                                
                            <div class="caption">
                                    <h4> <%= cart.product %> </h4>
                            </div>
                            <p>
                                <a href="/home/<%= cart._id %>" class="btn btn-info btn-sm">More info</a>
                            </p>
                        </div>
                      
                      
                  </div>
                  
                <%});  %>
        </div>
                    

</div>






<% include partials/footer %>
		
