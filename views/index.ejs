<% include partials/header %>

        <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" >
    
<div class="row">
        <div class="col-md-12">
                <div class="thumbnail">
                                <form action="/home" method="GET" class="form-inline my-2 my-lg-3">
                                        <input class="form-control my-2 my-lg-3 " name="search" type="search" placeholder="Search Products" aria-label="Search" >
                                        <button class="btn btn-info" type="submit">Search</button>
                                </form>    
            
                                        <% if(currentUser && currentUser.isSeller){%>
                                        
                                                <a href="http://www.picresize.com/"> <button class="btn bnt-warning"><strong>Resize Image</strong></button></a>    
                                                <a href="/home/new"> <button class="btn bnt-warning"><strong>Add Product</strong></button></a>

                                                <a href="/home/currentseller/profile"> <button class="btn bnt-warning"><strong>Seller Details</strong></button></a>
                                           
                                        <%} %>
                                        
                                    
                                </div>
        </div>
</div>

       
        <div class="row text-center" style="display:flex;flex-wrap:wrap;">

                <div class="col-md-12">
                        <% if(noMatch !== null) { %>
                        <h3  style="color:brown" ><%= noMatch %></h3>
                        <% } %>
                </div>       
                <% carts.reverse().forEach(function(cart){%>
                  <div class="col-md-3 col-sm-6">
                        <a href="/home/<%= cart._id %>">
                        <div class="thumbnail">
                                <img src="<%= cart.image %>">
                                
                            <div class="caption">
                                    <h4 style="color:brown"> <%= cart.product %> </h4>
                            </div>
                            <p>
                              <button class="btn btn-info btn-sm">More info</button> 
                            </p>
                        </div>
                        </a>
                      
                      
                  </div>
                  
                <%});  %>
        </div>
                    








<% include partials/footer %>
		
