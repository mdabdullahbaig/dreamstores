                      <%  if(currentUser && cart.author.id.equals(currentUser._id)){%>
                        <a href="/home/<%= cart._id%>/edit" class="btn btn-warning">Edit Cart</a>
                        <form action="/home/<%= cart._id%>?_method=DELETE" method="POST" style="display:inline">
                            <button class="btn btn-danger">Delete Cart</button>
                        </form>
                    <%} %>
                    
                        

                </div>
        </div>
        
        <div class="col-md-4">
                <div class="thumbnail">

                        <% cart.comments.forEach(function(comment){ %>
                            <p >
                                <strong><%= comment.author.username %></strong><br>
                               
                                    <%= comment.text %>
                               
                            
                            </p>
                            <%  if(currentUser && comment.author.id.equals(currentUser._id)){%>
                            <a href="/home/<%= cart._id%>/comments/<%= comment._id%>/edit" class="btn btn-warning btn-xs">Edit Comment</a>
                            <form action="/home/<%= cart._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST" style="display:inline">
                                <button class="btn btn-danger btn-xs">Delete Comment</button>
                            </form>
                            <%} %>
                        <%}) %>
                        
                            <form action="/home/<%= cart._id%>/comments" method="POST" class="form-inline my-2 my-lg-6">
